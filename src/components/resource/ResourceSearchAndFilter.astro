---
import SearchBox from "@/components/shared/SearchBox.astro";
import * as m from "@/paraglide/messages";
---

<section class="py-8">
  <!-- Search Box -->
  <div class="w-full flex justify-center mb-8 px-4">
    <SearchBox id="resource-search" />
  </div>

  <!-- Filter Buttons -->
  <div class="flex justify-center">
    <div id="resource-filter-buttons" class="btn-group">
      <button class="btn btn-primary" data-filter="all"
        >{m.resource_filter_all()}</button
      >
      <button class="btn" data-filter="คู่มือ"
        >{m.resource_filter_manual()}</button
      >
      <button class="btn" data-filter="แบบฟอร์ม"
        >{m.resource_filter_form()}</button
      >
      <button class="btn" data-filter="รายงาน"
        >{m.resource_filter_report()}</button
      >
      <button class="btn" data-filter="นโยบาย"
        >{m.resource_filter_policy()}</button
      >
    </div>
  </div>
</section>

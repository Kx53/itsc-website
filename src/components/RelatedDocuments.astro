---
interface Document {
  title: string;
  description: string;
  href: string;
  icon: string; // SVG path data
}

interface Props {
  documents: Document[];
}

const { documents } = Astro.props;
---

<div class="my-12">
  <h2 class="text-2xl font-bold mb-6 text-base-content">เอกสารที่เกี่ยวข้อง</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {
      documents.map((doc) => (
        <a
          href={doc.href}
          class="card bg-base-200 hover:bg-base-300 transition-colors duration-200 shadow-lg group"
        >
          <div class="card-body flex-row items-center p-6">
            <div class="bg-primary/10 text-primary p-3 rounded-lg mr-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d={doc.icon}
                />
              </svg>
            </div>
            <div>
              <h3 class="card-title group-hover:text-primary">{doc.title}</h3>
              <p class="text-sm text-base-content/70">{doc.description}</p>
            </div>
          </div>
        </a>
      ))
    }
  </div>
</div>

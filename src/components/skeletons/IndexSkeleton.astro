---
// IndexSkeleton.astro - Landing page skeleton based on Figma design
---

<div
  class="w-full space-y-8 animate-pulse -mt-16 md:-mt-20 lg:-mt-24"
  role="status"
  aria-label="กำลังโหลดเนื้อหา"
>
  <!-- Container wrapper for centered content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 space-y-8">
    <!-- Hero/Splash Image Section -->
    <div class="skeleton h-64 md:h-80 lg:h-96 w-full"></div>

    <!-- Highlight Section -->
    <div class="space-y-4">
      <!-- Section Title -->
      <div class="skeleton h-8 w-32"></div>

      <!-- Highlight Content Card -->
      <div class="skeleton h-[300px] w-full rounded-lg"></div>
    </div>

    <!-- Services Section -->
    <div class="space-y-6">
      <!-- Section Title -->
      <div class="skeleton h-8 w-40"></div>

      <!-- Service Cards Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="skeleton h-[438px] w-full rounded-[22px]"></div>
        <div class="skeleton h-[438px] w-full rounded-[22px]"></div>
        <div class="skeleton h-[438px] w-full rounded-[22px]"></div>
      </div>

      <!-- Second Row of Service Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="skeleton h-[438px] w-full rounded-[22px]"></div>
        <div class="skeleton h-[438px] w-full rounded-[22px]"></div>
        <div class="skeleton h-[438px] w-full rounded-[22px]"></div>
      </div>

      <!-- Single Service Card -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div></div>
        <!-- Empty space -->
        <div class="skeleton h-[438px] w-full rounded-[22px]"></div>
        <div></div>
        <!-- Empty space -->
      </div>
    </div>

    <!-- Image Slide Section -->
    <div class="skeleton h-[150px] w-full"></div>

    <!-- Guide Section -->
    <div class="space-y-6">
      <!-- Section Title -->
      <div class="skeleton h-8 w-24"></div>

      <!-- Guide Card -->
      <div class="skeleton h-[512px] w-full rounded-[22px]"></div>
    </div>

    <!-- IT Knowledge Section -->
    <div class="space-y-6">
      <!-- Section Title with YouTube Badge -->
      <div class="flex items-center justify-between">
        <div class="skeleton h-8 w-48"></div>
        <div class="skeleton h-[67px] w-[285px] rounded-[10px]"></div>
      </div>

      <!-- Knowledge Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="skeleton h-[250px] w-full"></div>
        <div class="skeleton h-[250px] w-full"></div>
        <div class="skeleton h-[250px] w-full"></div>
      </div>
    </div>

    <!-- News Section -->
    <div class="space-y-6">
      <!-- Section Title -->
      <div class="skeleton h-8 w-24"></div>

      <!-- News Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="skeleton h-[491px] w-full rounded-[22px]"></div>
        <div class="skeleton h-[491px] w-full rounded-[22px]"></div>
        <div class="skeleton h-[491px] w-full rounded-[22px]"></div>
      </div>
    </div>

    <!-- FAQ Section -->
    <div class="space-y-6">
      <!-- Section Title -->
      <div class="skeleton h-8 w-16"></div>

      <!-- FAQ Items -->
      <div class="space-y-4 max-w-2xl mx-auto">
        <div class="skeleton h-16 w-full rounded-lg"></div>
        <div class="skeleton h-16 w-full rounded-lg"></div>
        <div class="skeleton h-16 w-full rounded-lg"></div>
      </div>
    </div>

    <!-- Screen Reader Support -->
    <span class="sr-only">กำลังโหลดเนื้อหาเว็บไซต์...</span>
  </div>
</div>

<style>
  /* Enhanced skeleton animation with accessibility considerations */
  @keyframes skeleton-loading {
    0% {
      background-color: hsl(200, 20%, 80%);
    }
    100% {
      background-color: hsl(200, 20%, 95%);
    }
  }

  .skeleton {
    animation: skeleton-loading 1.5s ease-in-out infinite alternate;
    background-color: hsl(200, 20%, 80%);
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .skeleton {
      animation: none;
      background-color: hsl(200, 20%, 85%);
    }

    .animate-pulse {
      animation: none;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .skeleton {
      background-color: hsl(0, 0%, 60%);
      border: 1px solid hsl(0, 0%, 30%);
    }
  }

  /* Focus styles for keyboard navigation */
  [role="status"]:focus {
    outline: 2px solid hsl(234, 72%, 42%);
    outline-offset: 2px;
  }
</style>

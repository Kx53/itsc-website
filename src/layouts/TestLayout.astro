---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import { AstroFont } from "astro-font";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import BackToTop from "../components/BackToTop.astro";
import * as m from "../paraglide/messages";
import { getLocale, locales, localizeHref } from "../paraglide/runtime";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang={getLocale()}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- Preconnect for Google Fonts performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={m.site_description()} />
    <AstroFont
      config={[
        {
          src: [],
          name: "Sarabun",
          // Google Fonts URL
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Sarabun:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap",
          preload: true,
          display: "swap",
          selector: "body",
          fallback: "sans-serif",
        },
      ]}
    />

    <!-- hreflang tags for SEO -->
    {
      locales.map((lang) => (
        <link
          rel="alternate"
          hreflang={lang}
          href={localizeHref(Astro.url.pathname, { locale: lang })}
        />
      ))
    }
    <link
      rel="alternate"
      hreflang="x-default"
      href={localizeHref(Astro.url.pathname, { locale: "th" })}
    />

    <title>{title}</title>
    <ClientRouter />
  </head>
  <body>
    <div class="fixed top-0 w-full z-50 p-4">
      <div class="mx-auto max-w-7xl">
        <Navigation />
      </div>
    </div>

    <div id="smooth-wrapper">
      <div id="smooth-content">
        <main class="pt-60">
          <slot />
        </main>
        <Footer />
      </div>
    </div>

    <BackToTop />

    <script>
      import {
        initSmoothScrolling,
        killSmoothScrolling,
      } from "../script/gsap-init.js";

      // Initialize GSAP on page load
      document.addEventListener("astro:page-load", initSmoothScrolling);

      // Clean up GSAP before page swap
      document.addEventListener("astro:before-swap", killSmoothScrolling);
    </script>
  </body>
</html>

---

<TeamLayout
  title={pageTitle}
  footerAddressKey="teamfooter_address_b6r506"
  footerPhoneKey="teamfooter_phone_comlab"
  navItems={navItems}
>
  <HeroSection title={m.comlab_hero_title()} />
  <ServicesSection
    title={m.comlab_services_title()}
    subtitle={m.comlab_services_subtitle()}
    services={services}
    class="py-16 bg-base-100"
  />
  <section id="lab-services" class="py-16 bg-base-300">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          {m.comlab_lab_title()}
        </h2>
        <p class="text-lg md:text-xl text-base-content/60 max-w-3xl mx-auto">
          {m.comlab_lab_subtitle()}
        </p>
      </div>
      <LabGrid labs={labData} />
    </div>
  </section>
  <PortfolioFeature
    title={m.comlab_portfolio_title()}
    subtitle={m.comlab_portfolio_subtitle()}
    featureTitle="ระบบเครือข่ายห้องปฏิบัติการคอมพิวเตอร์"
    featureSubtitle="Windows Server 2012 R2"
    featureDescription={portfolioDescription}
  />
  <section id="about" class="bg-base-200 py-16">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          {m.comlab_about_title()}
        </h2>
        <p class="text-lg md:text-xl text-base-content/60 max-w-3xl mx-auto">
          {m.comlab_about_subtitle()}
        </p>
      </div>
      <TeamTimeline events={comlabTimeline} />
    </div>
  </section>
  <TeamSection
    title={m.datacenter_team_title()}
    subtitle={m.datacenter_team_subtitle()}
    description={m.datacenter_team_description()}
    members={teamMembers}
  />
</TeamLayout>

---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import { AstroFont } from "astro-font";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import Background from "../components/Background.astro";
import Background2 from "../components/Background2.astro";
import Background3 from "../components/Background3.astro";
import BackToTop from "../components/BackToTop.astro";
import {
  createTranslator,
  getRelativeLocaleUrl,
  isValidLanguage,
  defaultLang,
} from "../i18n/utils";

interface Props {
  title: string;
  removeMainPadding?: boolean;
}

const { title, removeMainPadding = false } = Astro.props;
const lang =
  Astro.currentLocale && isValidLanguage(Astro.currentLocale)
    ? Astro.currentLocale
    : defaultLang;
const t = createTranslator(Astro.currentLocale);

// Generate alternate language URLs for hreflang
const currentPath = Astro.url.pathname;
const cleanPath =
  lang === "th" ? currentPath : currentPath.replace(`/${lang}`, "");
const alternateUrls = {
  th: getRelativeLocaleUrl("th", cleanPath),
  en: getRelativeLocaleUrl("en", cleanPath),
};

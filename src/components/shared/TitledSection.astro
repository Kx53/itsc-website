---
interface Props {
  id?: string;
  title: string;
  subtitle?: string;
  description?: string;
  class?: string;
}

const {
  id,
  title,
  subtitle,
  description,
  class: className = "py-16",
} = Astro.props;
---

<section id={id} class={className}>
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        {title}
      </h2>
      {
        subtitle && (
          <p class="text-xl md:text-2xl mb-4 text-base-content/80">
            {subtitle}
          </p>
        )
      }
      {
        description && (
          <p class="text-lg md:text-xl text-base-content/60 max-w-3xl mx-auto">
            {description}
          </p>
        )
      }
    </div>

    <!-- Content slot -->
    <slot />
  </div>
</section>

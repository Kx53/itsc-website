const qualityAssuranceLinks = [
  {
    title: m.about_quality_year2564(),
    url: "#",
  },
  {
    title: m.about_quality_year2563(),
    url: "#",
  },
  {
    title: m.about_quality_year2562(),
    url: "#",
  },
  {
    title: m.about_quality_year2561(),
    url: "#",
  },
  {
    title: m.about_quality_year2560(),
    url: "#",
  },
  {
    title: m.about_quality_year2559(),
    url: "#",
  },
  {
    title: m.about_quality_year2558(),
    url: "#",
  },
  {
    title: m.about_quality_year2557(),
    url: "#",
  },
  {
    title: m.about_quality_year2556(),
    url: "#",
  },
  {
    title: m.about_quality_year2555(),
    url: "#",
  },
  {
    title: m.about_quality_year2554(),
    url: "#",
  },
  {
    title: m.about_quality_year2553(),
    url: "#",
  },
];

const announcementLinks = [
  {
    title: m.about_announcements_policy1(),
    url: "#",
  },
  {
    title: m.about_announcements_policy2(),
    url: "#",
  },
  {
    title: m.about_announcements_policy3(),
    url: "#",
  },
  {
    title: m.about_announcements_policy4(),
    url: "#",
  },

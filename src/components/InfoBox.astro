---
interface Props {
  type: "info" | "warning" | "tip";
  title: string;
}

const { type, title } = Astro.props;

const typeConfig = {
  info: {
    classes: "alert-info",
    icon: "M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z", // DaisyUI info icon
  },
  warning: {
    classes: "alert-warning",
    icon: "M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z", // DaisyUI warning icon
  },
  tip: {
    classes: "alert-success",
    icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z", // DaisyUI success icon
  },
};

const config = typeConfig[type];
---

<div class:list={["alert my-6 shadow-md", config.classes]}>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    class="stroke-current shrink-0 w-6 h-6"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d={config.icon}
    >
    </path>
  </svg>
  <div>
    <h3 class="font-bold">{title}</h3>
    <div class="text-sm"><slot /></div>
  </div>
</div>

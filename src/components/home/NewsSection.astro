---
import { createTranslator } from "@/i18n/utils";
import IconifyIcon from "@/components/IconifyIcon.vue";
import { Image } from "astro:assets";

const t = createTranslator("th");

const newsArticles = [
  {
    title: "Lorem ipsum dolor sit amet",
    description:
      "Lorem ipsum dolor sit amet, consectetur adipiscing elit. In varius nisl vitae nibh dignissim hendrerit.",
    image: "https://picsum.photos/seed/news1/600/400",
    link: "/news/article-1",
  },
  {
    title: "มหาวิทยาลัยรังสิตจัดงานใหญ่",
    description: "รายละเอียดข่าวที่สองเกี่ยวกับกิจกรรมล่าสุดของมหาวิทยาลัย",
    image: "https://picsum.photos/seed/news2/600/400",
    link: "/news/article-2",
  },
  {
    title: "ITSC เปิดตัวบริการใหม่",
    description:
      "สำนักบริการเทคโนโลยีสารสนเทศเปิดตัวบริการใหม่เพื่อตอบสนองความต้องการของนักศึกษา",
    image: "https://picsum.photos/seed/news3/600/400",
    link: "/news/article-3",
  },
];
---

<section class="bg-base-200 py-12 sm:py-16">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-3xl font-bold">{t("common.news")}</h2>
      <a href="/news" class="btn btn-ghost">
        {t("common.viewAll")}
        <IconifyIcon icon="mdi:arrow-right" className="w-4 h-4" client:load />
      </a>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        newsArticles.map((article) => (
          <div class="card bg-base-100 shadow-xl">
            <figure>
              <Image
                src={article.image}
                alt={article.title}
                width={600}
                height={400}
                loading="lazy"
                decoding="async"
              />
            </figure>
            <div class="card-body">
              <h2 class="card-title">{article.title}</h2>
              <p>{article.description}</p>
              <div class="card-actions justify-end">
                <a href={article.link} class="btn btn-primary">
                  {t("common.readMore")}
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

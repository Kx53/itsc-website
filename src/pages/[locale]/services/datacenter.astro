---

<TeamLayout title={pageTitle} navItems={navItems}>
  <HeroSection title={m.datacenter_hero_title()} />
  <ServicesSection
    title={m.datacenter_services_title()}
    subtitle={m.datacenter_services_subtitle()}
    services={services}
    class="py-16 bg-base-100"
  />
  <PortfolioSection />
  <section id="about" class="bg-base-200 py-16">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          {m.datacenter_about_title()}
        </h2>
        <p class="text-lg md:text-xl text-base-content/60 max-w-3xl mx-auto">
          {m.datacenter_about_subtitle()}
        </p>
      </div>
      <TeamTimeline events={datacenterTimeline} />
    </div>
  </section>
  <TeamSection
    title={m.datacenter_team_title()}
    subtitle={m.datacenter_team_subtitle()}
    description={m.datacenter_team_description()}
    members={teamMembers}
  />
</TeamLayout>

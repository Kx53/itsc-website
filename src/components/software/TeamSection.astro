---
import * as m from "@/paraglide/messages";
---

<section id="team" class="py-16">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        {m.software_team_title()}
      </h2>
      <p class="text-lg md:text-xl text-base-content/60 max-w-3xl mx-auto">
        {m.software_team_subtitle()}
      </p>
    </div>
    <div class="max-w-4xl mx-auto">
      <figure class="rounded-lg overflow-hidden shadow-lg">
        <img
          src="/path/to/your/team-image.jpg"
          alt={m.software_team_image_alt()}
          class="w-full h-auto"
        />
      </figure>
      <p class="text-center mt-4 text-base-content/80">
        {m.software_team_description()}
      </p>
    </div>
  </div>
</section>

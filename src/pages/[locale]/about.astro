---

<Layout title={pageTitle} removeMainPadding={true}>
  {/* This container will be pinned and its sections will be animated */}
  <div class="scrolling-sections-container">
    <div class="scrolling-sections">
      {/* Section 0: Hero */}
      <section class="scroll-section hero bg-base-200 relative">
        <div class="content-wrapper hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold">{m.about_title()}</h1>
            <p class="py-6">{m.about_subtitle()}</p>
          </div>
        </div>
        {/* Scroll Down Indicator */}
        <div
          class="scroll-indicator-wrapper absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2"
        >
          <span class="scroll-indicator-text">{m.common_scrollDown()}</span>
          <IconifyIcon
            icon="iconamoon:arrow-down-2-thin"
            className="scroll-indicator-icon"
            client:load
          />
        </div>
      </section>

      {/* Section 1: Vision & Mission */}
      <section class="scroll-section bg-base-100">
        <div class="content-wrapper container mx-auto px-8">
          <h2 class="text-4xl font-bold text-center mb-12">
            {m.about_visionMission_title()}
          </h2>
          <div class="space-y-12">
            <div>
              <h3 class="text-3xl font-bold mb-4">
                {m.about_vision_title()}
              </h3>
              <p class="text-lg">
                {m.about_vision_description()}
              </p>
            </div>
            <div>
              <h3 class="text-3xl font-bold mb-4">
                {m.about_mission_title()}
              </h3>
              <div class="space-y-2 text-lg">
                <p>{m.about_mission_description1()}</p>
                <p>{m.about_mission_description2()}</p>
                <p>{m.about_mission_description3()}</p>
              </div>
            </div>
          </div>
        </div>
      </section>

      {/* Section 2: Goals */}
      <section class="scroll-section bg-base-300">
        <div
          class="content-wrapper container mx-auto flex h-full flex-col items-center justify-center px-8"
        >
          <h2 class="text-4xl font-bold text-center mb-12">
            {m.about_goals_title()}
          </h2>
          <div
            class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8 w-full max-w-5xl"
          >
            <div
              class="card h-64 flex items-center justify-center bg-base-100 text-base-content shadow-xl"
            >
              <h3 class="text-2xl font-bold">ITSC-SMART</h3>
            </div>
            <div
              class="card h-64 flex items-center justify-center bg-base-100 text-base-content shadow-xl"
            >
              <h3 class="text-2xl font-bold">ITSC-Reform</h3>
            </div>
            <div
              class="card h-64 flex items-center justify-center bg-base-100 text-base-content shadow-xl"
            >
              <h3 class="text-2xl font-bold">ITSC-Transform</h3>
            </div>
            <div
              class="card h-64 flex items-center justify-center bg-base-100 text-base-content shadow-xl"
            >
              <h3 class="text-2xl font-bold">ITSC-GO</h3>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>

  {/* Section 3: Personnel - Moved out of the scrolling container */}
  <section class="py-20">
    <div
      class="container mx-auto flex flex-col items-center justify-center px-8"
    >
      <h2 class="text-4xl font-bold text-center mb-12">
        {m.about_personnel_title()}
      </h2>
      <div
        class="card bg-base-300 min-h-96 w-full max-w-4xl flex justify-center items-center shadow-xl"
      >
        <p class="text-xl text-base-content/60">(ส่วนแสดงผลบุคลากร)</p>
      </div>
    </div>
  </section>

  <!-- Quality Assurance Section -->
  <section class="bg-base-100 py-20 mb-16">
    <div class="max-w-4xl mx-auto px-8">
      <h2 class="text-3xl font-bold mb-4 text-center">
        {m.about_quality_title()}
      </h2>
      <p class="text-center mb-2 text-base-content/80">
        {m.about_quality_description()}
      </p>
      <p class="text-center font-bold mb-8 text-base-content/90">
        {m.about_quality_report()}
      </p>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-2">
        {
          qualityAssuranceLinks.map((link) => (
            <DocumentLink client:visible title={link.title} url={link.url} />
          ))
        }
      </div>
    </div>
  </section>

  <!-- Announcements Section -->
  <section class="max-w-4xl mx-auto mb-20">
    <h2 class="text-3xl font-bold mb-8 text-center">
      {m.about_announcements_title()}
    </h2>
    <div class="space-y-2">
      {
        announcementLinks.map((link) => (
          <DocumentLink client:visible title={link.title} url={link.url} />
        ))
      }
    </div>
  </section>
</Layout>

<style>
  /*
    Hide the content wrapper of the 2nd section onwards to prevent FOUC.
    GSAP will take over and make them visible during the animation.
  */
  .scrolling-sections .scroll-section:nth-child(n + 2) .content-wrapper {
    visibility: hidden;
  }
</style>

<script>
  import { initAnimations, killAnimations } from "@/script/about-animations.js";

  document.addEventListener("astro:page-load", initAnimations);
  document.addEventListener("astro:before-swap", killAnimations);
</script>

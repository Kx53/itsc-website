---
import TitledSection from "./TitledSection.astro";

interface Props {
  id?: string;
  title: string;
  subtitle?: string;
  items: string[];
  class?: string;
  gridCols?: string;
}

const {
  id = "portfolio",
  title,
  subtitle,
  items,
  class: className = "py-20 bg-base-100",
  gridCols = "grid-cols-1 sm:grid-cols-2 lg:grid-cols-4",
} = Astro.props;
---

<TitledSection id={id} title={title} subtitle={subtitle} class={className}>
  <div class={`grid ${gridCols} gap-6`}>
    {
      items.map((item) => (
        <div class="card bg-base-200 shadow-md p-6 h-full flex items-center justify-center">
          <p class="text-center text-base-content/80">{item}</p>
        </div>
      ))
    }
  </div>
</TitledSection>

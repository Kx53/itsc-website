---
import TitledSection from "./TitledSection.astro";

interface Props {
  id?: string;
  title: string;
  subtitle?: string;
  featureTitle: string;
  featureSubtitle?: string;
  featureDescription: string;
  imageUrl?: string;
  class?: string;
}

const {
  id = "portfolio",
  title,
  subtitle,
  featureTitle,
  featureSubtitle,
  featureDescription,
  imageUrl,
  class: className = "py-16",
} = Astro.props;
---

<TitledSection id={id} title={title} subtitle={subtitle} class={className}>
  <div class="flex flex-col lg:flex-row items-start gap-8">
    <!-- Content on the left -->
    <div class="w-full lg:w-1/2">
      <h3 class="text-2xl md:text-3xl font-bold mb-4">
        {featureTitle}
      </h3>
      {
        featureSubtitle && (
          <p class="text-lg md:text-xl mb-6">{featureSubtitle}</p>
        )
      }

      <div class="space-y-4 text-base md:text-lg">
        <div set:html={featureDescription} />
      </div>
    </div>

    <!-- Image on the right -->
    <div class="w-full lg:w-1/2 mt-8 lg:mt-0">
      <div
        class="bg-base-200 rounded-lg h-[550px] flex items-center justify-center"
      >
        {
          imageUrl ? (
            <img
              src={imageUrl}
              alt={featureTitle}
              class="w-full h-full object-cover rounded-lg"
            />
          ) : (
            <span class="text-base-content/50 text-lg">รูปภาพผลงาน</span>
          )
        }
      </div>
    </div>
  </div>
</TitledSection>

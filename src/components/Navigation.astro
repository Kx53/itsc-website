---
import { Image } from "astro:assets";
import logo from "../assets/logo.png";
import logobar from "../assets/logobar.png";
import IconifyIcon from "./IconifyIcon.vue"; // Import Vue component
import * as m from "../paraglide/messages";
import { localizeHref, deLocalizeHref, getLocale } from "../paraglide/runtime";

const currentLocale = getLocale();
const currentPath = deLocalizeHref(Astro.url.pathname);
---

<div class="drawer">
  <input id="main-drawer" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content flex flex-col">
    <!-- Navbar -->
    <div
      class="navbar bg-base-100 text-base-content p-4 rounded-xl shadow-lg flex items-center justify-between"
    >
      <div class="navbar-start">
        <!-- Hamburger button -->
        <div class="flex-none lg:hidden">
          <label for="main-drawer" class="btn btn-square btn-ghost">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              class="inline-block h-5 w-5 stroke-current"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
            <span class="sr-only">Open sidebar</span>
          </label>
        </div>
        <a href={localizeHref("/")} class="flex items-center p-2">
          <!-- Mobile -->
          <Image
            src={logo}
            alt="Logo"
            class="h-8 w-auto sm:hidden"
            loading="eager"
            width={64}
            height={64}
            quality="high"
          />
          <!-- Desktop -->
          <Image
            src={logobar}
            alt="Logo"
            class="h-8 w-auto hidden sm:block"
            loading="eager"
            width={300}
            height={64}
            quality="high"
          />
        </a>
      </div>

      <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal px-1 space-x-2">
          <li>
            <a
              href={localizeHref("/#services")}
              aria-label={m.common_service()}
              class="hover:text-base-content/70">{m.common_service()}</a
            >
          </li>
          <li>
            <a
              href={localizeHref("/guide")}
              aria-label={m.common_docs()}
              class="hover:text-base-content/70">{m.common_docs()}</a
            >
          </li>
          <li>
            <a
              href={localizeHref("/#it-knowledge")}
              aria-label={m.common_techtips()}
              class="hover:text-base-content/70">{m.common_techtips()}</a
            >
          </li>
          <li>
            <a
              href={localizeHref("/news")}
              aria-label={m.common_news()}
              class="hover:text-base-content/70">{m.common_news()}</a
            >
          </li>
          <li>
            <a
              href={localizeHref("/resource")}
              aria-label={m.common_forms()}
              class="hover:text-base-content/70">{m.common_forms()}</a
            >
          </li>
          <li>
            <a
              href={localizeHref("/about")}
              aria-label={m.common_about()}
              class="hover:text-base-content/70">{m.common_about()}</a
            >
          </li>
        </ul>
      </div>

      <div class="navbar-end space-x-2">
        <label
          class="swap swap-rotate btn btn-ghost btn-circle"
          aria-label={m.common_toggleTheme()}
        >
          <input
            type="checkbox"
            class="theme-controller hidden"
            value="dark"
            id="theme-toggle-desktop"
          />

          <!-- sun icon -->
          <svg
            class="swap-off h-5 w-5 fill-current"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
          >
            <path
              d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"
            ></path>
          </svg>

          <!-- moon icon -->
          <svg
            class="swap-on h-5 w-5 fill-current"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
          >
            <path
              d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"
            ></path>
          </svg>
        </label>

        <!-- Language Switcher -->
        <div class="dropdown dropdown-end">
          <div
            tabindex="0"
            role="button"
            class="btn btn-ghost btn-circle"
            aria-label="Switch language"
          >
            <IconifyIcon
              icon="material-symbols:language"
              className="h-5 w-5"
              client:load
            />
          </div>
          <ul
            tabindex="0"
            class="dropdown-content menu bg-base-100 rounded-box z-[1] w-32 p-2 shadow"
          >
            <li>
              <a
                href={localizeHref(currentPath, { locale: "th" })}
                class={currentLocale === "th" ? "active" : ""}
              >
                ðŸ‡¹ðŸ‡­ à¹„à¸—à¸¢
              </a>
            </li>
            <li>
              <a
                href={localizeHref(currentPath, { locale: "en" })}
                class={currentLocale === "en" ? "active" : ""}
              >
                ðŸ‡ºðŸ‡¸ English
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <!-- Page content here -->
  </div>
  <div class="drawer-side z-[2]">
    <label for="main-drawer" aria-label="close sidebar" class="drawer-overlay"
      ><span class="sr-only">close sidebar</span></label
    >
    <ul
      class="menu p-4 w-80 min-h-full bg-base-200 backdrop-blur-lg text-base-content"
    >
      <!-- Sidebar content here -->
      <li class="mb-4 menu-title text-lg">
        <a href={localizeHref("/")} class="flex items-center">
          <Image
            src={logo}
            alt="Logo"
            class="h-8 w-auto"
            loading="eager"
            width={64}
            height={64}
            quality="high"
          />
          <span class="ml-2">ITSC RSU</span>
        </a>
      </li>
      <li>
        <a
          href={localizeHref("/#services")}
          aria-label={m.common_service()}
          class="hover:text-base-content/70 py-3">{m.common_service()}</a
        >
      </li>
      <li>
        <a
          href={localizeHref("/guide")}
          aria-label={m.common_docs()}
          class="hover:text-base-content/70 py-3">{m.common_docs()}</a
        >
      </li>
      <li>
        <a
          href={localizeHref("/#it-knowledge")}
          aria-label={m.common_techtips()}
          class="hover:text-base-content/70 py-3">{m.common_techtips()}</a
        >
      </li>
      <li>
        <a
          href={localizeHref("/news")}
          aria-label={m.common_news()}
          class="hover:text-base-content/70 py-3">{m.common_news()}</a
        >
      </li>
      <li>
        <a
          href={localizeHref("/resource")}
          aria-label={m.common_forms()}
          class="hover:text-base-content/70 py-3">{m.common_forms()}</a
        >
      </li>
      <li>
        <a
          href={localizeHref("/about")}
          aria-label={m.common_about()}
          class="hover:text-base-content/70 py-3">{m.common_about()}</a
        >
      </li>
    </ul>
  </div>
</div>

<script>
  import "../script/ThemeToggle.js";
</script>

const pageTitle = `${t("about.title")} - ${t("site.title")}`;

const qualityAssuranceLinks = [
  {
    title: t("about.quality.year2564"),
    url: "#",
  },
  {
    title: t("about.quality.year2563"),
    url: "#",
  },
  {
    title: t("about.quality.year2562"),
    url: "#",
  },
  {
    title: t("about.quality.year2561"),
    url: "#",
  },
  {
    title: t("about.quality.year2560"),
    url: "#",
  },
  {
    title: t("about.quality.year2559"),
    url: "#",
  },
  {
    title: t("about.quality.year2558"),
    url: "#",
  },
  {
    title: t("about.quality.year2557"),
    url: "#",
  },
  {
    title: t("about.quality.year2556"),
    url: "#",
  },
  {
    title: t("about.quality.year2555"),
    url: "#",
  },
  {
    title: t("about.quality.year2554"),
    url: "#",
  },
  {
    title: t("about.quality.year2553"),
    url: "#",
  },
];

const announcementLinks = [
  {
    title: t("about.announcements.policy1"),
    url: "#",
  },
  {
    title: t("about.announcements.policy2"),
    url: "#",
  },

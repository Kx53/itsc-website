---
interface Props {
  author: string;
  avatar: string;
  description: string;
}

const { author, avatar, description } = Astro.props;
---

<div class="my-12">
  <div class="card lg:card-side bg-base-200 shadow-xl">
    <figure class="p-6">
      <div class="avatar">
        <div
          class="w-24 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2"
        >
          <img src={avatar} alt={`Avatar of ${author}`} />
        </div>
      </div>
    </figure>
    <div class="card-body">
      <h2 class="card-title">{author}</h2>
      <p>{description}</p>
    </div>
  </div>
</div>

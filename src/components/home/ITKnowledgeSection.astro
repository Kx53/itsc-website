---
import { createTranslator } from "@/i18n/utils";
import IconifyIcon from "@/components/IconifyIcon.vue";

const t = createTranslator("th");

const videos = [
  "https://www.youtube.com/embed/-3Ys4FnNGS8",
  "https://www.youtube.com/embed/Kn_1HjVU4a8",
  "https://www.youtube.com/embed/ZpBzEgL_qOE",
];
---

<section class="bg-base-100 py-12 sm:py-16">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-3xl font-bold">{t("home.itknowledge.title")}</h2>
      <a
        href="https://www.youtube.com/channel/UC060f4K0IdNMtTyBW1d6znA"
        target="_blank"
        rel="noopener noreferrer"
        class="btn bg-[#FF0000] hover:bg-[#CC0000] text-white border-none"
      >
        <IconifyIcon
          icon="line-md:youtube-filled"
          className="w-6 h-6"
          client:load
        />
        Youtube - ITSC RSU
      </a>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        videos.map((videoSrc) => (
          <iframe
            src={videoSrc}
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
            class="aspect-video w-full rounded-lg shadow-lg"
            loading="lazy"
          />
        ))
      }
    </div>
  </div>
</section>

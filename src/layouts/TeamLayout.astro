---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import { AstroFont } from "astro-font";
import TeamNavigation from "../components/TeamNavigation.astro";
import TeamFooter from "@/components/TeamFooter.astro";
import BackToTop from "../components/BackToTop.astro";
import Background from "../components/Background.astro";
import {
  createTranslator,
  getRelativeLocaleUrl,
  isValidLanguage,
  defaultLang,
} from "../i18n/utils";

interface Props {
  title: string;
  footerAddressKey?: any;
  footerPhoneKey?: any;
}

const { title, footerAddressKey, footerPhoneKey } = Astro.props;
const lang =
  Astro.currentLocale && isValidLanguage(Astro.currentLocale)
    ? Astro.currentLocale
    : defaultLang;
const t = createTranslator(Astro.currentLocale);

// Generate alternate language URLs for hreflang
const currentPath = Astro.url.pathname;
const cleanPath =
  lang === "th" ? currentPath : currentPath.replace(`/${lang}`, "");
const alternateUrls = {
  th: getRelativeLocaleUrl("th", cleanPath),
  en: getRelativeLocaleUrl("en", cleanPath),
};
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- Preconnect for Google Fonts performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={t("site.description")} />
    <AstroFont
      config={[
        {
          src: [],
          name: "Sarabun",
          // Google Fonts URL
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Sarabun:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap",
          preload: true,
          display: "swap",
          selector: "body",
          fallback: "sans-serif",
        },
      ]}
    />

    <!-- hreflang tags for SEO -->
    <link rel="alternate" hreflang="th" href={alternateUrls.th} />
    <link rel="alternate" hreflang="en" href={alternateUrls.en} />
    <link rel="alternate" hreflang="x-default" href={alternateUrls.th} />

    <title>{title}</title>
    <script is:inline>
      const getTheme = () => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      };

      const theme = getTheme();
      document.documentElement.setAttribute("data-theme", theme);
    </script>
    <ClientRouter />
  </head>
  <body class="flex flex-col min-h-screen">
    <Background />
    <!-- Fixed elements (like navigation) should be OUTSIDE the smooth-content -->
    <div class="fixed top-0 w-full z-50 p-4">
      <div class="mx-auto max-w-7xl">
        <TeamNavigation />
      </div>
    </div>

    <div id="smooth-wrapper">
      <div id="smooth-content">
        <main class="pt-28 flex-grow">
          <slot />
        </main>
        <section id="contact">
          <TeamFooter addressKey={footerAddressKey} phoneKey={footerPhoneKey} />
        </section>
      </div>
    </div>

    <!-- Back to top component -->
    <BackToTop />

    <script>
      import {
        initSmoothScrolling,
        killSmoothScrolling,
      } from "../script/gsap-init.js";
      // Initialize GSAP on page load
      document.addEventListener("astro:page-load", initSmoothScrolling);
      // Clean up GSAP before page swap
      document.addEventListener("astro:before-swap", killSmoothScrolling);
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

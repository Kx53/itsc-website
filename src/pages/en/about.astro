---
import Layout from "../../layouts/Layout.astro";
import { createTranslator } from "../../i18n/utils";
import DocumentLink from "../../components/DocumentLink.vue";

const t = createTranslator(Astro.currentLocale);
const pageTitle = `${t("about.title")} - ${t("site.title")}`;

const qualityAssuranceLinks = [
  {
    title: t("about.quality.year2564"),
    url: "#",
  },
  {

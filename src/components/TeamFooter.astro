---
import IconifyIcon from "./IconifyIcon.vue";
import * as m from "../paraglide/messages";

type AddressKeys = keyof typeof m & `teamfooter_address_${string}`;
type PhoneKeys = keyof typeof m & `teamfooter_phone_${string}`;

interface Props {
  addressKey?: AddressKeys;
  phoneKey?: PhoneKeys;
}

const {
  addressKey = "teamfooter_address_b1r207", // Default address
  phoneKey = "teamfooter_phone_service", // Default phone
} = Astro.props;
---

<footer
  class="footer footer-horizontal footer-center bg-base-200 text-base-content p-10"
>
  <aside>
    <img
      src="/logo.png"
      alt="ITSC Logo"
      width="50"
      height="50"
      class="inline-block"
      loading="lazy"
    />
    <p class="font-bold text-lg">{m.teamfooter_contact()}</p>
    <p class="font-regular">{m[addressKey]()}</p>
    <p class="font-bold text-lg">{m.teamfooter_phone()}</p>
    <p class="font-regular">{m[phoneKey]()}</p>
    <p>
      Copyright Â© {new Date().getFullYear()} - All right reserved by ITSC.
    </p>
  </aside>
  <nav>
    <div class="grid grid-flow-col gap-4">
      <a
        href="https://www.youtube.com/channel/UC060f4K0IdNMtTyBW1d6znA"
        target="_blank"
        aria-label="YouTube"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          class="fill-current"
        >
          <path
            d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"
          ></path>
        </svg>
      </a>
      <a
        href="https://www.facebook.com/rsu.itsc"
        target="_blank"
        aria-label="Facebook"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          class="fill-current"
        >
          <path
            d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"
          ></path>
        </svg>
      </a>
    </div>
  </nav>
</footer>
